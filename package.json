{
  "name": "guitar-chords",
  "version": "0.0.0",
  "description": "Generate a guitar chords or edit it.",
  "type": "module",
  "scripts": {
    "dev": "npm run dev -w libs/play",
    "build:demo": "npm run build -w libs/play",
    "build": "npm run build -w libs/canvas & npm run build -w libs/svg",
    "eslint": "eslint . --fix",
    "prepare": "husky"
  },
  "keywords": [
    "guitar-chords",
    "guitar",
    "chords",
    "editor",
    "canvas",
    "svg"
  ],
  "files": [
    "libs"
  ],
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --fix"
    ]
  },
  "workspaces": [
    "libs/*"
  ],
  "devDependencies": {
    "@eslint/js": "^9.12.0",
    "@zx-libs/header": "^0.0.2",
    "eslint": "^9.12.0",
    "globals": "^15.11.0",
    "husky": "^9.1.6",
    "inquirer": "^12.0.0",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.8.1",
    "vite": "^5.4.8",
    "vitest": "^2.1.2"
  },
  "repository": {
    "url": "https://github.com/capricorncd/guitar-chords"
  },
  "author": "Capricorncd<capricorncd@qq.com>",
  "license": "MIT"
}
